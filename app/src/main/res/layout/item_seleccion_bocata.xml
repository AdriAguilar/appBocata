<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/bg_caliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_box"
            android:backgroundTint="#F38262" />

        <TextView
            android:id="@+id/bocadillo_c_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/bocadillo_c_ingredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="16dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/bg_frio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_box"
            android:backgroundTint="#6299F3" />

        <TextView
            android:id="@+id/bocadillo_f_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/bocadillo_f_ingredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="16dp" />
    </FrameLayout>

</LinearLayout>
