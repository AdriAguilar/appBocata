<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/paredblanca" />

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintEnd_toEndOf="@+id/top"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@id/top"
        app:layout_constraintTop_toTopOf="@+id/top"
        app:layout_constraintVertical_bias="0.6" />

    <ImageButton
        android:id="@+id/bocata"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintEnd_toEndOf="@id/top"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/top"
        app:layout_constraintTop_toTopOf="@+id/top"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/logomibocata" />

    <TextView
        android:id="@+id/bg_caliente"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_box"
        android:backgroundTint="#F38262"
        app:layout_constraintBottom_toTopOf="@+id/bg_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/caliente_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/bg_caliente"
        app:layout_constraintEnd_toEndOf="@+id/bg_caliente"
        app:layout_constraintStart_toStartOf="@+id/bg_caliente"
        app:layout_constraintTop_toTopOf="@+id/bg_caliente" />

    <TextView
        android:id="@+id/bg_frio"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_box"
        android:backgroundTint="#6299F3"
        app:layout_constraintBottom_toTopOf="@+id/bg_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/frio_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="11"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bg_frio"
        app:layout_constraintEnd_toEndOf="@+id/bg_frio"
        app:layout_constraintStart_toStartOf="@+id/bg_frio"
        app:layout_constraintTop_toTopOf="@+id/bg_frio" />

    <TextView
        android:id="@+id/bg_history"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fecha_history_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21-11-2024"
        android:textSize="18sp"
        android:textColor="#62D173"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bg_history"
        app:layout_constraintEnd_toEndOf="@+id/bg_history"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/bg_history"
        app:layout_constraintTop_toTopOf="@+id/bg_history"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/bocata_history_1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Bocadillo de Atún y Cebolla"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_history"
        app:layout_constraintEnd_toEndOf="@+id/bg_history"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="@+id/bg_history"
        app:layout_constraintTop_toTopOf="@+id/bg_history"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/fecha_history_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25-11-2024"
        android:textSize="18sp"
        android:textColor="#62D173"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bg_history"
        app:layout_constraintEnd_toEndOf="@+id/bg_history"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/bg_history"
        app:layout_constraintTop_toTopOf="@+id/bg_history"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/bocata_history_2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Bocadillo de Jamón y Queso"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_history"
        app:layout_constraintEnd_toEndOf="@+id/bg_history"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="@+id/bg_history"
        app:layout_constraintTop_toTopOf="@+id/bg_history"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/bottom"
        app:layout_constraintEnd_toEndOf="@+id/bottom"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/bottom"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/user" />

    <ImageButton
        android:id="@+id/history"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/bottom"
        app:layout_constraintEnd_toEndOf="@+id/bottom"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="@id/bottom"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/history" />

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:paddingVertical="10dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/bottom"
        app:layout_constraintEnd_toEndOf="@+id/bottom"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="@id/bottom"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>