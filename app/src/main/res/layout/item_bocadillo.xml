<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bocadillo_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Día"/>

    <TextView
        android:id="@+id/bocadillo_caliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="8sp"
        android:textColor="#F38262"
        android:text="Nombre del bocadillo caliente"/>

    <TextView
        android:id="@+id/bocadillo_caliente_ingre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Ingredientes"/>

    <TextView
        android:id="@+id/bocadillo_frio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="8sp"
        android:textColor="#6299F3"
        android:text="Nombre del bocadillo frío"/>

    <TextView
        android:id="@+id/bocadillo_frio_ingre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Ingredientes"/>
</LinearLayout>
